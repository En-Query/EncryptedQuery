<xs:schema targetNamespace="http://enquery.net/encryptedquery/querykey" 
	xmlns="http://enquery.net/encryptedquery/querykey" 
	xmlns:xs="http://www.w3.org/2001/XMLSchema"
	elementFormDefault="qualified">

	<xs:element name="queryKey" type="QueryKey"/>

	<xs:complexType name="Paillier">
		<xs:sequence>
			<xs:element name="p" type="xs:integer" />
			<xs:element name="q" type="xs:integer" />
			<xs:element name="bitLength" type="xs:int" />
			<xs:element name="pBasePoint" type="xs:integer" />
			<xs:element name="pMaxExponent" type="xs:integer" />
			<xs:element name="qBasePoint" type="xs:integer" />
			<xs:element name="qMaxExponent" type="xs:integer" />
			<xs:element name="N" type="xs:integer" />
			<xs:element name="nSquared" type="xs:integer" />
			<xs:element name="pSquared" type="xs:integer" />
			<xs:element name="qSquared" type="xs:integer" />
			<xs:element name="pMinusOne" type="xs:integer" />
			<xs:element name="qMinusOne" type="xs:integer" />
			<xs:element name="wp" type="xs:integer" />
			<xs:element name="wq" type="xs:integer" />
		</xs:sequence>
	</xs:complexType>

	<xs:complexType name="QueryKey">
		<xs:sequence>
			<xs:element name="identifier" type="xs:string" />
			<xs:element name="paillier" type="Paillier" />
			
			<xs:element name="selectors">
				<xs:complexType>
					<xs:sequence>
						<xs:element name="entry" minOccurs="0" maxOccurs="unbounded">
							<xs:complexType>
								<xs:attribute name="value" type="xs:string" use="required" />
							</xs:complexType>
						</xs:element>
					</xs:sequence>
				</xs:complexType>
			</xs:element>

			<xs:element name="embedSelectorMap">
				<xs:complexType>
					<xs:sequence>
						<xs:element name="entry" minOccurs="0" maxOccurs="unbounded">
							<xs:complexType>
								<xs:attribute name="key" type="xs:int" use="required" />
								<xs:attribute name="value" type="xs:string" use="required" />
							</xs:complexType>
						</xs:element>
					</xs:sequence>
				</xs:complexType>
			</xs:element>
		</xs:sequence>
	</xs:complexType>
</xs:schema>
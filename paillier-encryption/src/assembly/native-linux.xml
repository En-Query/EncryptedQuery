<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">

	<id>native-linux</id>

	<includeBaseDirectory>false</includeBaseDirectory>

	<formats>
		<format>tar.gz</format>
	</formats>

	<fileSets>
		<fileSet>
			<directory>${project.build.directory}/classes/native/linux-x86-64</directory>
			<outputDirectory>linux-x86-64</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/native-builds/generated-headers</directory>
			<outputDirectory>includes</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>